<section>
  <h1>San Francisco municipal transit</h1>
</section>

{{#if loading}}
  loading
{{else}}
  <route-select
    @routes={{routes}}
    @selectedRoutes={{selectedRoutes}}
    @selectRoutes={{action selectRoutes}}
    @noBusesRunning={{noBusesRunning}}
  />

  <route-map
    @routes={{routes}}
    @selectedRoutes={{selectedRoutes}}
    @refreshLocations={{refreshLocations}}
    @setNoBusesRunning={{action setNoBusesRunning}}
  />
{{/if}}