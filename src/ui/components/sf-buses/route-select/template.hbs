<nav>
  <h2 onclick={{action showSelect}}>
    {{@selectedRoute.title}}
  </h2>
  <ul class={{visible}}>
    {{#each @routes key="@index" as |route|}}
      <rs-option
        @onclick={{action selectRoute route}}
        @selectedRoute={{@selectedRoute}}
        @route={{route}}
      >
        {{route.title}}
      </rs-option>
    {{/each}}
  </ul>
</nav>